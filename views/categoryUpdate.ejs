<%- include('partials/head')%>
    <div class="nav-container">
        <a href="/">Back</a>
    </div>
    <form action="/category/<%=category._id%>/edit" method="POST" class="new-category-form">
        <h2>Edit Category</h2>
        <fieldset class="info-fields">
            <label for="name">
                ID:
                <textarea type="text" name="id" id="" cols="30" rows="10"  required ></textarea>
            </label>
            <label for="description">
                Description:
                <textarea name="description" id="" cols="30" rows="10" required ></textarea>
            </label>
        </fieldset>
        <fieldset class="button-container">
            <div>
                <label for="submit"></label>
                <input type="submit" class="submit-button">
            </div>
        </fieldset>
    </form>
  </body>
